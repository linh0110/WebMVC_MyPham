@using LinhcosMVC.Models;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style type="text/css">
    #Datmua a{
        clear:both; background-color:#bdb3b3;
        color:white; width:150px; height:50px;
        display:block; text-align:center; float:left;
        padding-top:10px; text-decoration:none; font-weight:bold;
    }
    #Datmua a:hover{
        background-color:gray;
        color:black;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-5">
                    <h3><img src="~/Asset/Pic/HinhSP/@Model.Hinh" style="width:450px; height:450px;" /></h3>
                </div>
                <div class="col-lg-7">
                    <h4 style="font-weight:bold;">Tên sản phẩm</h4> @Model.TenSP
                    <br />
                    <br />
                    <h4 style="font-weight:bold;">Mô tả</h4>
                    @Model.Mota
                    <br />
                    <br />
                    <p><a style="font-weight:bold;">Giá: </a>@Model.Gia VND <p />
                    <br />
                    <div id="Datmua">
                        <a href="@Url.Action("ThemGioHang","GioHang", new { @sMaSP = @Model.MaSP, @strURL = Request.Url.ToString()})" class="list-group-item">Đặt mua</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



