@model IEnumerable<LinhcosMVC.Models.TinTuc>

@{
    ViewBag.Title = "TinTucMoiNhat";
    Layout = "";
}
        <div class="col-lg-12">
            <div>
                <br />
                <h3 style="font:bold">Tin Mới Nhất</h3>
                <br />
            </div>
            @foreach (var tin in Model)
            {
                <div style="float:left; width:100%; padding:0px 0px 2px 0px;">
                    <div style="float:left; width:25%;">
                        <a href="#"></a>
                        <img src="~/Asset/Pic/hinhTinTuc/@tin.HinhMinhHoa" style="width:50px; height:50px" />
                    </div>
                    <div style="float:left; height:100px; width:75%;">
                        <h6 style="font:bold;">@tin.TieuDeTin</h6>
                        <h6 style="color:#c5c1c1">Ngày Đăng: @tin.NgayDang</h6>
                        
                    </div>
                </div>
                <br />
            }
        </div>


